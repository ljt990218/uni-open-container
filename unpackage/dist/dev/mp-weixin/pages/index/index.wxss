
.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}
.scrollable {
  height: 100vh;
  flex: 1;
  overflow: hidden;
  box-sizing: border-box;
}
.logo {
  height: 200rpx;
  width: 200rpx;
  margin-top: 200rpx;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 50rpx;
}
.float-button {
  width: 56px;
  height: 56px;
  border-radius: 50%;
  overflow: hidden;
  position: absolute;
  right: 20px;
  bottom: 60px;
}
.ball {
  height: 56px;
  line-height: 56px;
  text-align: center;
  border-radius: 50%;
  background-color: plum;
  font-size: 24px;
}
